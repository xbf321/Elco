@{
    Layout = "../Shared/_ProductLayout.cshtml";
    ViewBag.Title = "Product Center";

    //获得产品一级分类
    var firstCat = Elco.Services.CategoryService.ListByParentId(Elco.Config.GeneralConfig.ProductRootId_EN).Where(p => p.IsDeleted == false); 
}
<ul class="channel_prodList">
    @foreach (var first in firstCat)
    {
        <text>
            <li><a href="/product/list-@(first.Id).html"><img src="@(first.ImageUrl)" alt="@(first.Name)" width="130" height="100" /></a>
            <h1><a href="/product/list-@(first.Id).html">@(first.Name)</a></h1>
            <div>@Html.Raw(first.Introduction)</div>
            </li>
        </text>
    }
</ul>