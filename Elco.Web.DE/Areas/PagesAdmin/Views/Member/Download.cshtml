@{
    ViewBag.Title = "A user downloads";
    Layout = "../Shared/_Layout.cshtml";
}
@ViewBag.Value
<fieldset>
    <legend>Downloads</legend>
    <form method="post">
    <table>
        <tr>
            <td>Select month：</td>
            <td><select id="month" name="month">
                @if(ViewBag.MonthList.Count > 0){
                    foreach(var item in ViewBag.MonthList){
                        <text><option value="@(item.Item1)">@(item.Item1)(@(item.Item2))</option></text>
                    }
                }
            </select></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" id="btnDownload" value="Download" /></td>
        </tr>
    </table>
    </form>
</fieldset>
