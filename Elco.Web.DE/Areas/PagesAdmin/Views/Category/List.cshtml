@{
    ViewBag.Title = "The category list";
    Layout = "../Shared/_Layout.cshtml";
}
<fieldset>
    <legend>The category list</legend>
    <table width="100%">
        <tr>
            <td colspan="2"><a href="create" class="btn-add" style=" width:120px;">Add classification</a></td>
        </tr>
        <tr>
            <td id="catTree" colspan="2">@Html.Raw(ViewBag.CatHtml)</td>
        </tr>
    </table>
</fieldset>
@section footer{
    <script type="text/javascript">        
        function operate(id, action) {
            if (window.confirm('To confirm the operation?')) {
                window.location.href = 'operate?id='+id+'&action='+action;
            }
        }
        $(function () {
            $("#treeview").treeview({
                collapsed: false,
                animated: "medium",
                control: "#sidetreecontrol",
                persist: "location"
            });
        })
    </script>
}
