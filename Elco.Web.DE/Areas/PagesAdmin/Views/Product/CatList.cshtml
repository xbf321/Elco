@{
    ViewBag.Title = "Product classification";
    Layout = "../Shared/_Layout.cshtml";
}
<fieldset>
    <legend>Product category</legend>
    <table width="100%">
        <tr>
            <td align="right"><a href="catcreate" class="btn-add" style=" width:170px;">Add product classification</a></td>
        </tr>
    </table>
    <table width="100%">
        <tr>
            <td id="catTree" colspan="2">@Html.Raw(ViewBag.CatHtml)</td>
        </tr>
    </table>
</fieldset>
@section footer{
    <script type="text/javascript">
        function operate(id, action) {
            if (window.confirm('To confirm the operation？')) {
                window.location.href = '../category/operate?id=' + id + '&action=' + action;
            }
        }
        $(function () {
            $("#treeview").treeview({
                collapsed: false,
                animated: "medium",
                control: "#sidetreecontrol",
                persist: "location"
            });
        })
    </script>
}


