@section footer{
    <script type="text/javascript">
        $(function () {
            function initFrame() {
                var myHeight = $(window).height();
                var myWidth = $(window).width();
                var otherHeight = 73 + 30;  //页头和页尾
                var otherWidth = 215;
                $('#main-body').css({ "height": myHeight - otherHeight + 'px' });
                $('#nav-side-bar').css({ "height": myHeight - otherHeight - 20 + 'px' });
                $('#main-content').css({ "height": myHeight - otherHeight - 20 + 'px', "width": myWidth - otherWidth + "px" });
                $('#iframeMain').css({ "height": myHeight - otherHeight - 52 + 'px' });
            }
            window.onresize = function () {
                initFrame();
            }
            initFrame();


            $("#treeview").treeview({
                collapsed: false,
                animated: "medium",
                control: "#sidetreecontrol",
                persist: "location"
            });
        });
    </script>
}